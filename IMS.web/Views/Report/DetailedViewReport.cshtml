@if (Model.CustomerReportViewModels != null)
{
    <div class="row" style="overflow-x:auto">
        <div class="col-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Transaction Id
                        </th>
                        <th>
                            Transaction Date
                        </th>
                        <th>
                            Customer Name
                        </th>
                        <th>
                            Net Amount
                        </th>
                        <th>
                            Discount
                        </th>
                        <th>
                            Total Amount
                        </th>
                        <th>
                            PaymentMethod
                        </th>
                        <th>
                            Remarks
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var items in Model.CustomerReportViewModels)
                    {
                        <tr>
                            <td>
                                @items.TransactionId
                            </td>
                            <td>
                                @items.TransactionDate.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                @items.CustomerName
                            </td>
                            <td>
                                @items.NetAmount
                            </td>
                            <td>
                                @items.DiscountAmount
                            </td>
                            <td>
                                @items.TotalAmount
                            </td>
                            <td>
                                @Html.Raw((PaymentMethodEnum)items.PaymentMethod)
                            </td>
                            <td>
                                @items.Remarks
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

