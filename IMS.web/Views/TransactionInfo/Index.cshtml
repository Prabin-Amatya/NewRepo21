@model IEnumerable<IMS.Modes.Entity.ProductInvoiceInfo>
@using IMS.Modes.Enum

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="Transaction">Add Transaction</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Invoice No
                    </th>
                    <th>
                        Transaction Date
                    </th>
                    <th>
                       Customer Name
                    </th>
                    <th>
                        Total Amount
                    </th>
                    <th>
                        Payment Method
                    </th>
                    <th>
                        Bill Status
                    </th>
                    <th>
                        Cancallation Remarks
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                
                @foreach(var items in Model)
                {
                    <tr>
                        <td>@items.Id</td>
                        <td>@items.TransactionDate</td>
                       
                        @foreach(var customer in ViewBag.CustomerInfos)
                            {
                                @if(items.CustomerInfoId == customer.Id)
                                {
                                    <td>@customer.CustomerName</td>
                                }
                            }

                        <td>@items.TotalAmount</td>
                        <td>@Html.Raw((PaymentMethodEnum)items.PaymentMethod)</td>
                        <td>@Html.Raw((BillStatusEnum)items.BillStatus)</td>
                        <td>@items.CancellationRemarks</td>
                            <td>
                                @if (items.BillStatus == 1)
                                {
                                    <a class="btn btn-danger" onclick="cancel(@items.Id)">Cancel</a>
                                    <a class="btn btn-primary"  onclick="print('@items.Id')" asp-route-id="@items.Id">Print</a>
                                }
                            </td>
                    </tr>
                }
            
            </tbody>
        </table>
    </div>
</div>



<div class="modal" tabindex="-1" id="cancelmodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-floating">
                    <input id="itemId" hidden />
                    <input id="cancelremark" class="form-control" />
                    <label class="control-label">Cancellation Remarks*</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="CancelTransaction()">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script>

        function cancel(itemId){

            $('#itemId').val(itemId);
            $('#cancelmodal').modal('show');


        }

        function CancelTransaction(){
            debugger;
            var id = $('#itemId').val();
            var cancelremarks = $('#cancelremark').val();

            if(cancelremarks='')
            {
                alert('Please enter cancel remarks');
            }

            $.ajax({
                url: '/api/Transaction/CancelTransaction',
                data: JSON.stringify({ invoiceId:id, cancellationRemarks:cancelremarks}),
                method: 'POST'
            }).done(function (data) {

                console.log(data);

                

                setTimeout(function () {
                    toastr.success('Delete Success')
                    location.href = '/TransactionInfo/Index';
                }, 1500);



            }).fail(function () {

            });
        }

        function print(itemId) {
            window.open('/TransactionInfo/PrintReport?Id='+itemId);
        }
    </script>




}