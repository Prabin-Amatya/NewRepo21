@model IEnumerable<IMS.Modes.Entity.ProductInvoiceInfo>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="Transaction">Add Transaction</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table>
            <thead>
                <tr>
                    <th>
                        Invoice No
                    </th>
                    <th>
                        Transaction Date
                    </th>
                    <th>
                       Customer Name
                    </th>
                    <th>
                        Total Amount
                    </th>
                    
                    <th>
                        Bill Status
                    </th>
                    <th>
                        Cancallation Remarks
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                
                @foreach(var items in Model)
                {
                    <tr>
                        <td>@items.Id</td>
                        <td>@items.TransactionDate</td>
                       
                        @foreach(var customer in ViewBag.CustomerInfos)
                            {
                                @if(items.CustomerInfoId == customer.Id)
                                {
                                    <td>@customer.CustomerName</td>
                                }
                            }

                        <td>@items.TotalAmount</td>
                        <td>@items.BillStatus</td>
                        <td>@items.CancellationRemarks</td>
                            <td>
                                @if (items.BillStatus == 1)
                                {
                                    <a class="btn btn-danger">Cancel</a>
                                }
                                <a class="btn btn-primary" asp-action="PrintReport" asp-route-id ="@items.Id">Print</a>
                            </td>
                    </tr>
                }
            
            </tbody>
        </table>
    </div>
</div>