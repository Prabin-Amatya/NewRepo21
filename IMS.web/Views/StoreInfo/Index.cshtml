﻿
@model IEnumerable<IMS.Modes.Entity.StoreInfo>

@{
    ViewData["Title"] = "Store Info";
}
<div class="row">
    <div class="col-12">
    <a class="btn btn-primary float-end" asp-action="AddEdit">Add New</a>
    </div>
</div>

<div class="row col-12">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Store Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Registration No</th>
                <th>Pan No</th>
                <th>Is Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var store in Model)
            {
            <tr>
                <td>@store.StoreName</td>
                <td>@store.Address</td>
                <td>@store.PhoneNumber</td>
                <td>@store.RegistrationNo</td>
                <td>@store.PanNo</td>
                <td>@store.IsActive</td>
                <td>
                    <a class="btn btn-primary" asp-action="AddEdit" asp-route-id="@store.Id">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-action="Remove" asp-route-id="@store.Id">Delete</a>
                </td>
                
            </tr>
                
            }
        </tbody>
        
    </table>
</div>
