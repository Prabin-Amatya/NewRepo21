@model IEnumerable<IMS.Modes.Entity.ProductRateInfo>

<div class="row">
    <div class="col-12">
    <a class="btn btn-primary float-end" asp-action="AddEdit">Add New</a>
    </div>
</div>

<div class="d-flex justify-content-center align-items-center" style="width:100%; margin:0">
<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.CategoryInfo.CategoryName)</th>
                <th>@Html.DisplayNameFor(p => p.ProductInfo.ProductName)</th>
                <th>@Html.DisplayNameFor(p => p.Quantity)</th>
                <th>@Html.DisplayNameFor(p => p.RemainingQuantity)</th>
                <th>@Html.DisplayNameFor(p => p.CostPrice)</th>
                <th>@Html.DisplayNameFor(p => p.SellingPrice)</th>
                <th>@Html.DisplayNameFor(p => p.SupplierInfo.SupplierName)</th>
                <th>@Html.DisplayNameFor(p => p.BatchNo)</th>
                <th>@Html.DisplayNameFor(p => p.PurchasedDate)</th>
                <th>@Html.DisplayNameFor(p => p.ExpiryDate)</th>

                <th>@Html.DisplayNameFor(p => p.IsActive)</th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var items in Model)
            {
            <tr>
                    <td>@items.CategoryInfo.CategoryName</td>
                    <td>@items.ProductInfo.ProductName</td>
                    <td>@items.Quantity</td>
                    <td>@items.RemainingQuantity</td>
                    <td>@items.CostPrice</td>
                    <td>@items.SellingPrice</td>
                    <td>@items.BatchNo</td>
                    <td>@items.SupplierInfo.SupplierName</td>
                    <td>@items.PurchasedDate</td>
                    <td>@items.ExpiryDate</td>
                   
                <td>@items.IsActive</td>
               
                    
                <td>
                    <a class="btn btn-primary" asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                    
                </td>
                
            </tr>
                
            }
        </tbody>
        
    </table>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
